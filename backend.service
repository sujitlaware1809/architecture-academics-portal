[Unit]
Description=Architecture Academics Backend (FastAPI)
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/architecture-academics-portal/backend
Environment="PATH=/home/ubuntu/architecture-academics-portal/backend/venv/bin"
ExecStart=/home/ubuntu/architecture-academics-portal/backend/venv/bin/python run_server.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
